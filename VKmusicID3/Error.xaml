<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Icon="/VKmusicID3;component/favicon.ico" Title="Error" ShowInTaskbar="False" ShowActivated="True"
        ResizeMode="NoResize" Width="200" WindowStartupLocation="CenterScreen" SizeToContent="Height">
    <StackPanel Name="Wrap" Margin="5">
        <Image Source="/VKmusicID3;component/error.gif" HorizontalAlignment="Center" Width="86" />
        <TextBlock TextWrapping="Wrap" TextAlignment="Justify">
            Something went wrong :( The application is about to close. Here's the message:
        </TextBlock>
        <Border Style="{StaticResource Graybg}" Padding="5" Margin="0 5 0 5">
            <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Hidden"  Height="50">
                <TextBlock Name="Error" TextWrapping="Wrap" />
            </ScrollViewer>
        </Border>
        <Button Name="Exit" Content="Exit" />
    </StackPanel>
</Window>